<!-- LOGIN SCREEN -->
<div id="loginPage">
  <h1>Enter Access Code</h1>
  <input id="accessCode" type="text" placeholder="Enter code">
  <button onclick="login()">Enter</button>
  <p id="error"></p>
</div>

<!-- GAME PAGE -->
<div id="gamePage">
  <a href="#" class="back" onclick="backToLogin()">‚Üê Back</a>
  <iframe src="https://growden.io" allowfullscreen></iframe>
</div>

<script>
function login() {
  const code = document.getElementById('accessCode').value.trim();
  const error = document.getElementById('error');
  if (code === '1234') { // You can change this code
    document.getElementById('loginPage').style.display = 'none';
    document.getElementById('gamePage').style.display = 'block';
  } else {
    error.textContent = "Incorrect code!";
  }
}

function backToLogin() {
  document.getElementById('gamePage').style.display = 'none';
  document.getElementById('loginPage').style.display = 'flex';
}
</script>

